{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist",
    
    
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
    
  },
  "include": [
    "src/**/*.ts"
  ]
}